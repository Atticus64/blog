---
const name = "Jonathan"
import PageLayout from "../layouts/PageLayout.astro"
import PageMeta from "../components/PageMeta.astro"
import { SITE_TITLE } from "../config"
--- 

<PageLayout>
<PageMeta title={`About me | ${SITE_TITLE}`} slot="meta" />


<section slot="main">	
	<h2>	Hi! I'm Jonathan</h2>
	<div class="about">	
		<div>	
			<p>	I'm a Christian Student and Web Developer </p>
      <picture>
        <source srcset="/images/tulip_profile.avif" type="image/avif" />
        <source srcset="/images/tulip_profile.webp" type="image/webp" />
        <img alt="Tulip profile" src="/images/tulip_profile.jpg" width="400" height="400" />
      </picture>
		</div>
		<div>
			<p>
				<h3> I will share my knowledge and learnings in this blog. </h3>
			I will write about life, programming, web development 
			</p>

			<h4> I'm interested in: </h4>
			<ul>
				<li>Web Development</li>
				<li>Basquetball</li>
				<li>Video Games</li>
				<li>Lofi and Christian Music</li>
			</ul>
		</div>
	</div>
</section>

</PageLayout>

<style> 

.about {
	display: flex;	
	flex-direction: row;
	flex-wrap: no-wrap;
	gap: 1rem;
	justify-content: space-between;
}

</style>


